create database niec;

create table user(id bigint primary key auto_increment, username varchar(25) unique not null, email varchar(255) character set latin1 collate latin1_swedish_ci unique not null, password varchar(255) not null, bio text, dp varchar(255), created_at datetime not null);

create table article( id bigint primary key auto_increment, title varchar(255) not null, created_at datetime not null, text longtext not null);

create table map_user_article(user_id bigint not null references user(id), article_id bigint not null references article(id));